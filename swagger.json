{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "My API",
        "description": "A sample API for demonstration purposes"
    },
    "host": "localhost:3000",

    "schemes": [
        "http"
    ],
    "paths": {
        "/book/list": {
            "get": {
                "description": "Retrieve a list of books",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "A list of books",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/books"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "book": {
            "required": [
                "title",
                "isban"
            ],
            "properties": {
                "bookId": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                },
                "isban": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "author": {
                    "type": "string"
                },
                "pages": {
                    "type": "integer"
                }
            }
        },
        "books": {
            "$ref": "#/definitions/book"
        }
    }
}